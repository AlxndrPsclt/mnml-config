bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Desktop screenshot
bindsym --release Print exec "scrot ~/Pictures/screenshots/$(date --iso-8601='seconds').png -m -e 'xclip -selection c -t image/png < $f' ; notify-send 'Full desktop screenshot taken.'"
