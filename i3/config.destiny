for_window [class="Pavucontrol"] floating enable

for_window [class="^.*"] border pixel 1

assign [title="SuperCollider Help"] → $WS4
assign [class="SuperCollider"] → $WS4
assign [class="Messenger for Desktop"] → $WS9
for_window [class="Messenger for Desktop"] fullscreen enable
assign [class="Conky"] → $WS1

#Gaps config
